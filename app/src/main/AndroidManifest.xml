<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arvisiontech.firebasechat">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name="co.arvisiontech.simplechatfirebase.FirebaseChatMainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="co.arvisiontech.simplechatfirebase.ui.activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.arvisiontech.simplechatfirebase.ui.activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="co.arvisiontech.simplechatfirebase.ui.activities.RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="co.arvisiontech.simplechatfirebase.SpeachActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="co.arvisiontech.simplechatfirebase.ui.activities.UserListingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="co.arvisiontech.simplechatfirebase.ui.activities.ChatActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="co.arvisiontech.simplechatfirebase.SignsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="co.arvisiontech.simplechatfirebase.AlphabetActivity"/>

        <activity android:name="co.arvisiontech.simplechatfirebase.TextToSpeachActivity" />
        <activity android:name="co.arvisiontech.simplechatfirebase.SignsAlphabetActivity" />
        <activity android:name="co.arvisiontech.simplechatfirebase.SignsWordsActivity" />


        <activity android:name="co.arvisiontech.simplechatfirebase.MainActivity" />
        <activity android:name="co.arvisiontech.simplechatfirebase.DeviceListActivity" />

        <service android:name="co.arvisiontech.simplechatfirebase.fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="co.arvisiontech.simplechatfirebase.fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>