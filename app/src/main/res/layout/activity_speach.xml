            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/line3"
            android:paddingStart="20dp"
            android:text="speach-to-text"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textSize="15sp"/>

        <!-- Rating -->
        <TextView
            android:id="@+id/content3"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title3"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/line3"
            android:paddingStart="20dp"
            android:text="Chat with people with gloves and text chat"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/btn_speach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/continueTextColor"
            android:drawableEnd="@drawable/ic_continue"
            android:layout_below="@id/content3"
            android:background="@color/btnBackground"/>

    </RelativeLayout>

